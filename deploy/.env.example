# Docker Compose Environment Configuration
# Copy this file to .env and modify as needed

# Application Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# Backend Configuration
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0

# Database Configuration (if needed)
DATABASE_URL=sqlite:///./app.db

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production

# Model Configuration (if needed)
MODEL_NAME=your-model-name
MODEL_PATH=/app/models

# Additional Backend Environment Variables
# Add any other backend-specific environment variables here
# API_KEY=your-api-key
# REDIS_URL=redis://redis:6379

# Frontend Configuration
# Add any frontend-specific environment variables here
# VITE_API_BASE_URL=http://localhost:8000
# VITE_APP_TITLE=Your App Title

# SSL Configuration (for production with nginx)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem
